# Required for real AEMET API calls
AEMET_API_KEY=your_aemet_api_key_here

# Backend settings
DATABASE_URL=sqlite:///./aemet_cache.db
REQUEST_TIMEOUT_SECONDS=20
AEMET_MIN_REQUEST_INTERVAL_SECONDS=2

# API authentication (JWT)
API_AUTH_ENABLED=true
API_AUTH_USERNAME=analyst
API_AUTH_PASSWORD=change_this_password
JWT_SECRET_KEY=change_this_secret_key
# Access token TTL in seconds. Keep at 3600 (1 hour) for inactivity session policy.
JWT_ACCESS_TOKEN_TTL_SECONDS=3600
JWT_ISSUER=antarctic-analytics

# Antarctic station IDs
AEMET_GABRIEL_STATION_ID=89070
AEMET_JUAN_STATION_ID=89064

# Cache freshness window in seconds (default: 3 hours)
CACHE_FRESHNESS_SECONDS=10800

# Station catalog cache freshness (default: 7 days)
STATION_CATALOG_FRESHNESS_SECONDS=604800
